@model QuarryManagementSystem.Models.Domain.CustomerPrepayment
@{
    ViewData["Title"] = "Delete Customer Prepayment";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Delete Customer Prepayment</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Prepayment")">Prepayments</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="alert alert-warning">
            <h5><i class="icon fas fa-exclamation-triangle"></i> Confirm Delete</h5>
            Are you sure you want to delete this prepayment?
        </div>

        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Prepayment Details</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Prepayment #</dt>
                    <dd class="col-sm-9">@Model.PrepaymentNumber</dd>

                    <dt class="col-sm-3">Date</dt>
                    <dd class="col-sm-9">@Model.PrepaymentDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Customer</dt>
                    <dd class="col-sm-9">@Model.Customer?.Name ?? $"ID {Model.CustomerId}"</dd>

                    <dt class="col-sm-3">Payment Method</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.PaymentMethod) ? Model.PaymentMethod : "-")</dd>

                    <dt class="col-sm-3">Material</dt>
                    <dd class="col-sm-9">@((Model.Material != null) ? Model.Material.Name : "-")</dd>

                    <dt class="col-sm-3">Weight Unit</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.WeightUnit) ? Model.WeightUnit : "-")</dd>

                    <dt class="col-sm-3">Amount</dt>
                    <dd class="col-sm-9">@Model.Amount.ToString("N2")</dd>

                    <dt class="col-sm-3">Used Amount</dt>
                    <dd class="col-sm-9">@Model.UsedAmount.ToString("N2")</dd>

                    <dt class="col-sm-3">Remaining</dt>
                    <dd class="col-sm-9">@Model.RemainingAmount.ToString("N2")</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Model.Status</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</section>