@model IEnumerable<QuarryManagementSystem.Models.Domain.CustomerPrepayment>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Customer Prepayments";
    var customers = ViewBag.Customers as List<SelectListItem> ?? new();
    int? selectedCustomerId = null;
    if (Context.Request.Query.ContainsKey("customerId") &&
        int.TryParse(Context.Request.Query["customerId"], out var cid))
    {
        selectedCustomerId = cid;
    }
    DateTime? fromDate = null;
    if (Context.Request.Query.ContainsKey("fromDate") &&
        DateTime.TryParse(Context.Request.Query["fromDate"], out var fd))
    {
        fromDate = fd;
    }
    DateTime? toDate = null;
    if (Context.Request.Query.ContainsKey("toDate") &&
        DateTime.TryParse(Context.Request.Query["toDate"], out var td))
    {
        toDate = td;
    }
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Customer Prepayments</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item active">Prepayments</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Filter</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> New Prepayment
                    </a>
                </div>
            </div>
            <div class="card-body">
                <form method="get" class="form-inline">
                    <div class="form-group mr-2 mb-2">
                        <label for="customerId" class="mr-2">Customer</label>
                        <select id="customerId" name="customerId" class="form-control form-control-sm" asp-items="customers">
                            <option value="">-- All Customers --</option>
                        </select>
                    </div>
                    <div class="form-group mr-2 mb-2">
                        <label for="fromDate" class="mr-2">From</label>
                        <input type="date" id="fromDate" name="fromDate" value="@(fromDate?.ToString("yyyy-MM-dd") ?? string.Empty)" class="form-control form-control-sm" />
                    </div>
                    <div class="form-group mr-2 mb-2">
                        <label for="toDate" class="mr-2">To</label>
                        <input type="date" id="toDate" name="toDate" value="@(toDate?.ToString("yyyy-MM-dd") ?? string.Empty)" class="form-control form-control-sm" />
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary mb-2">
                        <i class="fas fa-search"></i> Apply
                    </button>
                    <a asp-action="Index" class="btn btn-sm btn-secondary mb-2 ml-2">
                        <i class="fas fa-sync"></i> Reset
                    </a>
                </form>
            </div>
        </div>

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Prepayment List</h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Prepayment #</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th class="text-right">Amount (₦)</th>
                                <th class="text-right">Used (₦)</th>
                                <th class="text-right">Remaining (₦)</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var p in Model)
                                {
                                    var customerName = p.Customer?.Name ?? $"ID {p.CustomerId}";
                                    <tr>
                                        <td>@p.PrepaymentNumber</td>
                                        <td>@p.PrepaymentDate.ToString("dd/MM/yyyy")</td>
                                        <td>@customerName</td>
                                        <td class="text-right">@p.Amount.ToString("N2")</td>
                                        <td class="text-right">@p.UsedAmount.ToString("N2")</td>
                                        <td class="text-right">@p.RemainingAmount.ToString("N2")</td>
                                        <td>
                                            <span class="badge badge-@(p.Status == "Active" ? "success" : p.Status == "Exhausted" ? "secondary" : "warning")">
                                                @p.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        No prepayments found for the selected criteria.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <script>
        (function () {
            var selectedCustomerId = '@(selectedCustomerId?.ToString() ?? "")';
            if (selectedCustomerId) {
                document.getElementById('customerId').value = selectedCustomerId;
            }
        })();
    </script>
}