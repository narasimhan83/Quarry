@model QuarryManagementSystem.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - TRACO Mining Ltd. Nigeria</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap 4 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Source Sans Pro', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-page {
            background: none;
        }

        .login-container {
            max-width: 450px;
            width: 100%;
            margin: 20px;
        }

        .login-card {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            animation: slideUp 0.5s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            padding: 40px 30px;
            text-align: center;
            border-bottom: 4px solid #ff6b35;
        }

        .company-logo {
            max-width: 200px;
            height: auto;
            margin-bottom: 20px;
            animation: fadeIn 1s ease-in;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .logo-placeholder {
            width: 120px;
            height: 120px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #ff6b35 0%, #ffffff 50%, #00843d 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 48px;
            font-weight: bold;
            color: white;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .company-name {
            color: #ffffff;
            font-size: 28px;
            font-weight: 700;
            margin: 0;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .company-tagline {
            color: #b8b8b8;
            font-size: 14px;
            margin-top: 5px;
            letter-spacing: 1px;
        }

        .login-body {
            padding: 40px 30px 30px;
        }

        .login-title {
            text-align: center;
            color: #333;
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-control {
            height: 50px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 15px 20px;
            font-size: 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .input-icon {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
        }

        .input-group-custom {
            position: relative;
        }

        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .remember-me label {
            margin-left: 10px;
            margin-bottom: 0;
            color: #666;
            cursor: pointer;
        }

        .btn-login {
            height: 50px;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            transition: all 0.3s ease;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .divider {
            text-align: center;
            margin: 25px 0;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
            background: #e0e0e0;
        }

        .divider-text {
            background: white;
            padding: 0 15px;
            position: relative;
            color: #999;
            font-size: 13px;
        }

        .default-credentials {
            background: linear-gradient(135deg, #f5f7fa 0%, #e8edf3 100%);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
        }

        .default-credentials h6 {
            color: #333;
            font-weight: 600;
            margin-bottom: 15px;
            font-size: 14px;
        }

        .credential-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            font-size: 13px;
        }

        .credential-label {
            color: #666;
            font-weight: 500;
        }

        .credential-value {
            background: #fff;
            padding: 5px 15px;
            border-radius: 5px;
            font-family: 'Courier New', monospace;
            color: #667eea;
            font-weight: 600;
        }

        .forgot-link {
            text-align: center;
            margin-top: 20px;
        }

        .forgot-link a {
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .forgot-link a:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        .footer-text {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
            color: #999;
            font-size: 12px;
        }

        .text-danger {
            font-size: 13px;
            margin-top: 5px;
        }

        /* Nigerian flag colors accent */
        .nigerian-accent {
            height: 4px;
            background: linear-gradient(90deg, #008753 0%, #ffffff 50%, #ff6b35 100%);
            margin-top: 15px;
        }

        /* Checkbox styling */
        input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        /* Loading animation */
        .btn-login.loading {
            pointer-events: none;
            opacity: 0.7;
        }

        .btn-login.loading::after {
            content: ' ';
            width: 16px;
            height: 16px;
            margin-left: 10px;
            border: 2px solid #fff;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 0.6s linear infinite;
            display: inline-block;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Responsive design */
        @@media (max-width: 576px) {
            .login-container {
                margin: 10px;
            }
            
            .login-header {
                padding: 30px 20px;
            }
            
            .company-name {
                font-size: 22px;
            }
            
            .login-body {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body class="login-page">
    <div class="login-container">
        <div class="login-card">
            <!-- Header with Logo -->
            <div class="login-header">
                <!-- Logo Placeholder - Replace with actual logo -->
                <div class="logo-placeholder">
                    <i class="fas fa-mountain"></i>
                </div>
                <!-- Company Name -->
                <h1 class="company-name">TRACO MINING LTD.</h1>
                <p class="company-tagline">Nigeria's Premier Quarry Management System</p>
                <div class="nigerian-accent"></div>
            </div>

            <!-- Login Form -->
            <div class="login-body">
                <h2 class="login-title">Welcome Back</h2>

                <form asp-action="Login" method="post" id="loginForm" asp-antiforgery="true">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    
                    <!-- Username Field -->
                    <div class="form-group">
                        <label asp-for="Username" class="small text-muted mb-2">Username</label>
                        <div class="input-group-custom">
                            <input asp-for="Username"
                                   id="Username"
                                   name="Username"
                                   class="form-control"
                                   placeholder="Enter your username"
                                   autocomplete="username"
                                   value="" />
                            <i class="fas fa-user input-icon"></i>
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group">
                        <label asp-for="Password" class="small text-muted mb-2">Password</label>
                        <div class="input-group-custom">
                            <input asp-for="Password"
                                   id="Password"
                                   name="Password"
                                   type="password"
                                   class="form-control"
                                   placeholder="Enter your password"
                                   autocomplete="current-password"
                                   value="" />
                            <i class="fas fa-lock input-icon"></i>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="remember-me">
                        <input asp-for="RememberMe" id="rememberMe">
                        <label asp-for="RememberMe">Keep me signed in</label>
                    </div>

                    <!-- Login Button -->
                    <div class="form-group mb-0">
                        <button type="submit" class="btn btn-primary btn-login btn-block">
                            <i class="fas fa-sign-in-alt mr-2"></i> Sign In
                        </button>
                    </div>
                </form>

                <!-- Divider -->
                <div class="divider">
                    <span class="divider-text">OR USE DEFAULT CREDENTIALS</span>
                </div>

                <!-- Default Credentials -->
                <div class="default-credentials">
                    <h6><i class="fas fa-key mr-2"></i>Demo Access</h6>
                    <div class="credential-item">
                        <span class="credential-label">Username:</span>
                        <span class="credential-value">admin</span>
                    </div>
                    <div class="credential-item">
                        <span class="credential-label">Password:</span>
                        <span class="credential-value">Admin@2024</span>
                    </div>
                </div>

                <!-- Forgot Password Link -->
                <div class="forgot-link">
                    <a href="#"><i class="fas fa-question-circle mr-1"></i> Forgot your password?</a>
                </div>

                <!-- Footer -->
                <div class="footer-text">
                    <i class="fas fa-shield-alt mr-1"></i> Secure Login Portal<br>
                    &copy; 2024 TRACO Mining Ltd. All rights reserved.
                </div>
            </div>
        </div>

        <!-- Info Text Below Card -->
        <div class="text-center mt-4">
            <p style="color: rgba(255,255,255,0.8); font-size: 13px;">
                <i class="fas fa-info-circle mr-1"></i> 
                Powered by Nigerian Quarry Management System v1.0
            </p>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            // Debug: Log form submission
            $('#loginForm').on('submit', function(e) {
                console.log('Form submission triggered');
                console.log('Username field value:', $('#Username').val());
                console.log('Password field value:', $('#Password').val());
                
                var btn = $(this).find('button[type="submit"]');
                btn.addClass('loading');
                btn.html('<i class="fas fa-spinner fa-spin mr-2"></i> Signing In...');
            });

            // Auto-fill demo credentials on click
            $('.default-credentials').on('click', function() {
                $('#Username').val('admin');
                $('#Password').val('Admin@2024');
                console.log('Demo credentials filled - Username:', $('#Username').val(), 'Password:', $('#Password').val());
            });

            // Add focus animation to inputs
            $('.form-control').on('focus', function() {
                $(this).parent().find('.input-icon').css('color', '#667eea');
            }).on('blur', function() {
                $(this).parent().find('.input-icon').css('color', '#999');
            });
        });
    </script>
</body>
</html>