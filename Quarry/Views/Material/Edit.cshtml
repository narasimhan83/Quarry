@model QuarryManagementSystem.Models.Domain.Material
@{
    ViewData["Title"] = "Edit Material";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit Material</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Material")">Materials</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Material Information</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Type" class="control-label"></label>
                                        <select asp-for="Type" asp-items="ViewBag.Types" class="form-control">
                                            <option value="">-- Select Type --</option>
                                        </select>
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Unit" class="control-label"></label>
                                        <select asp-for="Unit" class="form-control">
                                            <option value="Ton">Ton</option>
                                            <option value="Kg">Kg</option>
                                            <option value="Cubic Meter">Cubic Meter</option>
                                            <option value="Cubic Feet">Cubic Feet</option>
                                        </select>
                                        <span asp-validation-for="Unit" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Status" class="control-label"></label>
                                        <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-control"></select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="UnitPrice" class="control-label"></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">₦</span>
                                            </div>
                                            <input asp-for="UnitPrice" class="form-control" />
                                        </div>
                                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="VatRate" class="control-label"></label>
                                        <div class="input-group">
                                            <input asp-for="VatRate" class="form-control" />
                                            <div class="input-group-append">
                                                <span class="input-group-text">%</span>
                                            </div>
                                        </div>
                                        <span asp-validation-for="VatRate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Price Preview -->
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Price Preview</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Price with VAT</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">₦</span>
                                    </div>
                                    <input id="PriceWithVat" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <label>VAT Amount</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">₦</span>
                                    </div>
                                    <input id="VatAmount" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Audit -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Audit</h3>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>Created:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <p class="mb-0"><strong>Updated:</strong> @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            function recalc() {
                var price = parseFloat($('#UnitPrice').val()) || 0;
                var vat = parseFloat($('#VatRate').val()) || 0;
                var vatAmount = price * (vat / 100);
                var total = price + vatAmount;
                $('#VatAmount').val(vatAmount.toFixed(2));
                $('#PriceWithVat').val(total.toFixed(2));
            }

            $('#UnitPrice, #VatRate').on('input change', recalc);
            recalc();
        });
    </script>
}