@model QuarryManagementSystem.Controllers.UserController.UserIndexViewModel
@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">User Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item active">Users</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title mb-0">Filters</h3>
            </div>
            <div class="card-body">
                <form asp-action="Index" asp-controller="User" method="get" class="form-inline">
                    <div class="form-group mr-2">
                        <input name="search" value="@Model.Search" class="form-control" placeholder="Search name, username, email, phone" />
                    </div>
                    <div class="form-group mr-2">
                        <select name="role" class="form-control">
                            <option value="">All Roles</option>
                            @foreach (var r in Model.AvailableRoles)
                            {
                                if (Model.Role == r)
                                {
                                    <option value="@r" selected>@r</option>
                                }
                                else
                                {
                                    <option value="@r">@r</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group mr-2">
                        <select name="status" class="form-control">
                            <option value="">All Status</option>
                            @if (Model.Status == "Active")
                            {
                                <option value="Active" selected>Active</option>
                            }
                            else
                            {
                                <option value="Active">Active</option>
                            }
                            @if (Model.Status == "Inactive")
                            {
                                <option value="Inactive" selected>Inactive</option>
                            }
                            else
                            {
                                <option value="Inactive">Inactive</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Apply</button>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h3 class="card-title mb-0">Users</h3>
                <span class="text-muted">Total: @Model.Users.Count</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="min-width: 160px;">Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th style="min-width: 200px;">Roles</th>
                                <th>Status</th>
                                <th>Last Login</th>
                                <th class="text-right" style="min-width: 250px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.Users.Any())
                        {
                            foreach (var u in Model.Users)
                            {
                                <tr>
                                    <td>@u.FullName</td>
                                    <td>@u.UserName</td>
                                    <td>@u.Email</td>
                                    <td>@u.PhoneNumber</td>
                                    <td>
                                        @if (u.Roles.Any())
                                        {
                                            foreach (var role in u.Roles)
                                            {
                                                <span class="badge badge-info mr-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No roles</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge badge-@(u.IsActive ? "success" : "secondary")">@(u.IsActive ? "Active" : "Inactive")</span>
                                    </td>
                                    <td>@(u.LastLogin?.ToString("yyyy-MM-dd HH:mm") ?? "â€”")</td>
                                    <td class="text-right">
                                        <div class="d-inline-block">
                                            <form asp-action="ToggleActive" asp-controller="User" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@u.Id" />
                                                <button type="submit" class="btn btn-sm @(u.IsActive ? "btn-warning" : "btn-success")">
                                                    <i class="fas @(u.IsActive ? "fa-user-slash" : "fa-user-check")"></i>
                                                    @(u.IsActive ? "Deactivate" : "Activate")
                                                </button>
                                            </form>
                                        </div>

                                        <div class="dropdown d-inline-block ml-1">
                                            <button class="btn btn-sm btn-primary dropdown-toggle" type="button" id="roleMenu-@u.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Roles
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right p-2" aria-labelledby="roleMenu-@u.Id" style="min-width: 260px;">
                                                <div class="mb-2">
                                                    <strong>Assign Role</strong>
                                                    <form asp-action="AddToRole" asp-controller="User" method="post" class="mt-2">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@u.Id" />
                                                        <div class="input-group input-group-sm">
                                                            <select name="role" class="form-control">
                                                                @foreach (var r in Model.AvailableRoles)
                                                                {
                                                                    <option value="@r">@r</option>
                                                                }
                                                            </select>
                                                            <div class="input-group-append">
                                                                <button type="submit" class="btn btn-success btn-sm">Add</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="mt-2 pt-2 border-top">
                                                    <strong>Remove Role</strong>
                                                    <form asp-action="RemoveFromRole" asp-controller="User" method="post" class="mt-2">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@u.Id" />
                                                        <div class="input-group input-group-sm">
                                                            <select name="role" class="form-control">
                                                                @if (u.Roles.Any())
                                                                {
                                                                    foreach (var r in u.Roles)
                                                                    {
                                                                        <option value="@r">@r</option>
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    <option disabled selected>No roles</option>
                                                                }
                                                            </select>
                                                            <div class="input-group-append">
                                                                <button type="submit" class="btn btn-danger btn-sm" @(u.Roles.Any() ? null : "disabled")>Remove</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>

                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center p-4 text-muted">No users found.</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="alert alert-info">
            <i class="fas fa-info-circle mr-1"></i>
            Use the actions to activate/deactivate accounts and assign roles. Only Admins can access this screen.
        </div>
    </div>
</section>