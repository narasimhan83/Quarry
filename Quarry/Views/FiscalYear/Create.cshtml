@model QuarryManagementSystem.Models.Domain.FiscalYear

@{
    ViewData["Title"] = "Create Fiscal Year";
}

@section Breadcrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "FiscalYear")">Fiscal Years</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create Fiscal Year</h3>
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <div class="form-group">
                <label asp-for="YearCode"></label>
                <input asp-for="YearCode" class="form-control" />
                <span asp-validation-for="YearCode" class="text-danger"></span>
                <small class="form-text text-muted">
                    Example: 2025 or 2025-2026.
                </small>
            </div>

            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="alert alert-info small">
                The first fiscal year created will automatically be marked as current.
                Overlapping date ranges with existing years are not allowed.
            </div>
        </div>

        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}