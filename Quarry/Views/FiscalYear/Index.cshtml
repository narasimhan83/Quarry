@model IEnumerable<QuarryManagementSystem.Models.Domain.FiscalYear>

@{
    ViewData["Title"] = "Fiscal Years";
}

@section Breadcrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item active">Fiscal Years</li>
    </ol>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">Fiscal Years</h3>
        <a href="@Url.Action("Create", "FiscalYear")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> New Fiscal Year
        </a>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover table-striped table-sm">
                <thead>
                    <tr>
                        <th>Year Code</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th style="width: 220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.YearCode</td>
                                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.IsCurrent)
                                    {
                                        <span class="badge badge-success mr-1">Current</span>
                                    }
                                    @if (item.IsClosed)
                                    {
                                        <span class="badge badge-secondary">Closed</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info">Open</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Edit", "FiscalYear", new { id = item.Id })"
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>

                                        @if (!item.IsClosed)
                                        {
                                            <form asp-action="SetCurrent"
                                                  asp-controller="FiscalYear"
                                                  method="post"
                                                  class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit"
                                                        class="btn btn-outline-info"
                                                        title="Set as current year">
                                                    <i class="fas fa-star"></i>
                                                </button>
                                            </form>

                                            <form asp-action="Close"
                                                  asp-controller="FiscalYear"
                                                  method="post"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to close this fiscal year?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit"
                                                        class="btn btn-outline-danger"
                                                        title="Close fiscal year">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No fiscal years defined.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>