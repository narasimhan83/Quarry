@model QuarryManagementSystem.Models.Domain.FiscalYear

@{
    ViewData["Title"] = "Edit Fiscal Year";
}

@section Breadcrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "FiscalYear")">Fiscal Years</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Fiscal Year</h3>
    </div>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card-body">
            <div class="form-group">
                <label asp-for="YearCode"></label>
                <input asp-for="YearCode" class="form-control" />
                <span asp-validation-for="YearCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Status</label>
                <div>
                    @if (Model.IsCurrent)
                    {
                        <span class="badge badge-success mr-1">Current</span>
                    }
                    @if (Model.IsClosed)
                    {
                        <span class="badge badge-secondary">Closed</span>
                    }
                    else
                    {
                        <span class="badge badge-info">Open</span>
                    }
                </div>
            </div>

            @if (Model.IsClosed)
            {
                <div class="alert alert-warning small">
                    This fiscal year is closed and cannot be edited.
                </div>
            }
            else
            {
                <div class="alert alert-info small">
                    Overlapping date ranges with other fiscal years are not allowed.
                </div>
            }
        </div>

        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            @if (!Model.IsClosed)
            {
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            }
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}