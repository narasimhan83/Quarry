@model QuarryManagementSystem.Models.Domain.ChartOfAccounts

@{
    ViewData["Title"] = "Account Details";
}

@section Breadcrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ChartOfAccounts")">Chart of Accounts</a></li>
        <li class="breadcrumb-item active">Account Details</li>
    </ol>
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Account Details</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Model == null)
        {
            <div class="alert alert-danger">
                Account not found.
            </div>
        }
        else
        {
            <dl class="row">
                <dt class="col-sm-3">Account Code</dt>
                <dd class="col-sm-9">@Model.AccountCode</dd>

                <dt class="col-sm-3">Account Name</dt>
                <dd class="col-sm-9">@Model.AccountName</dd>

                <dt class="col-sm-3">Account Type</dt>
                <dd class="col-sm-9">@Model.AccountType</dd>

                <dt class="col-sm-3">Sub Type</dt>
                <dd class="col-sm-9">@Model.SubType</dd>

                <dt class="col-sm-3">Opening Balance (₦)</dt>
                <dd class="col-sm-9">@Model.OpeningBalance.ToString("N2")</dd>

                <dt class="col-sm-3">Current Balance (₦)</dt>
                <dd class="col-sm-9">@Model.CurrentBalance.ToString("N2")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Inactive</span>
                    }
                </dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>
        }
    </div>
</div>