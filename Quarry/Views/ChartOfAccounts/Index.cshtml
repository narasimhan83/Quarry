@model IEnumerable<QuarryManagementSystem.Models.Domain.ChartOfAccounts>

@{
    ViewData["Title"] = "Chart of Accounts";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Chart of Accounts</h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover table-striped table-sm">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Sub Type</th>
                    <th class="text-right">Opening Balance (₦)</th>
                    <th class="text-right">Current Balance (₦)</th>
                    <th>Status</th>
                    <th style="width: 80px;"></th>
                </tr>
            </thead>
            <tbody>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.AccountCode</td>
            <td>@item.AccountName</td>
            <td>@item.AccountType</td>
            <td>@item.SubType</td>
            <td class="text-right">@item.OpeningBalance.ToString("N2")</td>
            <td class="text-right">@item.CurrentBalance.ToString("N2")</td>
            <td>
                @if (item.IsActive)
                {
                    <span class="badge badge-success">Active</span>
                }
                else
                {
                    <span class="badge badge-secondary">Inactive</span>
                }
            </td>
            <td class="text-right">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-xs btn-outline-primary">Details</a>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted">No accounts found.</td>
    </tr>
}
            </tbody>
        </table>
    </div>
</div>