@model QuarryManagementSystem.ViewModels.InvoiceListViewModel
@{
    ViewData["Title"] = "Invoice Management";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Invoice Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Home</a></li>
                    <li class="breadcrumb-item active">Invoices</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Success!</h5>
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Error!</h5>
                @TempData["Error"]
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Error!</h5>
                @Model.ErrorMessage
            </div>
        }

        <!-- Summary Cards -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.Invoices.Count</h3>
                        <p>Total Invoices</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-document"></i>
                    </div>
                    <a href="@Url.Action("Create", "Invoice")" class="small-box-footer">Create New <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.UnpaidInvoices</h3>
                        <p>Unpaid Invoices</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-clock"></i>
                    </div>
                    <a href="@Url.Action("Index", "Invoice", new { status = "Unpaid" })" class="small-box-footer">View <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.TotalOutstanding.ToString("C")</h3>
                        <p>Outstanding Amount</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-cash"></i>
                    </div>
                    <a href="#" class="small-box-footer">Details <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.OverdueInvoices</h3>
                    <p>Overdue Invoices</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-alert"></i>
                    </div>
                    <a href="@Url.Action("Index", "Invoice", new { status = "Overdue" })" class="small-box-footer">View <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>

        <!-- Search and Filter Card -->
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Search & Filter Invoices</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" class="form-horizontal">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="SearchTerm" class="control-label"></label>
                                <input asp-for="SearchTerm" class="form-control" placeholder="Search by invoice # or customer" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SelectedStatus" class="control-label"></label>
                                <select asp-for="SelectedStatus" asp-items="Model.Statuses" class="form-control">
                                    <option value="">-- All Statuses --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label">Date From</label>
                                <input name="dateFrom" type="date" value="@(Model.DateFrom?.ToString("yyyy-MM-dd"))" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label">Date To</label>
                                <input name="dateTo" type="date" value="@(Model.DateTo?.ToString("yyyy-MM-dd"))" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">&nbsp;</label>
                                <div class="input-group">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary ml-2">
                                        <i class="fas fa-refresh"></i> Reset
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Invoice List Card -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Invoice List</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Create New Invoice
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Due Date</th>
                                <th>Total Amount</th>
                                <th>Paid Amount</th>
                                <th>Outstanding</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Invoices.Any())
                            {
                                @foreach (var invoice in Model.Invoices)
                                {
                                    <tr>
                                        <td>
                                            <strong>@invoice.InvoiceNumber</strong>
                                            @if (!string.IsNullOrEmpty(invoice.LGAReceiptNumber))
                                            {
                                                <br><small class="text-muted">LGA: @invoice.LGAReceiptNumber</small>
                                            }
                                        </td>
                                        <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (invoice.Customer != null)
                                            {
                                                <span>@invoice.Customer.Name</span>
                                                <br><small class="text-muted">@invoice.Customer.ContactPerson</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Unknown Customer</span>
                                            }
                                        </td>
                                        <td>
                                            @invoice.DueDate?.ToString("dd/MM/yyyy")
                                            @if (invoice.IsOverdue())
                                            {
                                                <br><span class="badge badge-danger">Overdue</span>
                                            }
                                        </td>
                                        <td class="text-success">@invoice.TotalAmount.ToString("C")</td>
                                        <td class="text-info">@invoice.PaidAmount.ToString("C")</td>
                                        <td>
                                            @{
                                                var outstandingClass = invoice.OutstandingBalance > 0 ? "text-warning" : "text-success";
                                            }
                                            <span class="@outstandingClass">@invoice.OutstandingBalance.ToString("C")</span>
                                        </td>
                                        <td>
                                            @{
                                                var statusClass = invoice.Status switch
                                                {
                                                    "Paid" => "badge-success",
                                                    "Partial" => "badge-info",
                                                    "Overdue" => "badge-danger",
                                                    "Cancelled" => "badge-secondary",
                                                    _ => "badge-warning"
                                                };
                                            }
                                            <span class="badge @statusClass">@invoice.Status</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Print" asp-route-id="@invoice.Id" class="btn btn-secondary" title="Print" target="_blank">
                                                    <i class="fas fa-print"></i>
                                                </a>
                                                @if (invoice.Status != "Paid" && invoice.Status != "Cancelled")
                                                {
                                                    <a asp-action="RecordPayment" asp-route-id="@invoice.Id" class="btn btn-success" title="Record Payment">
                                                        <i class="fas fa-money-bill-wave"></i>
                                                    </a>
                                                }
                                                @if (invoice.Status == "Unpaid" && invoice.PaidAmount == 0)
                                                {
                                                    <a asp-action="Cancel" asp-route-id="@invoice.Id" class="btn btn-danger" title="Cancel" onclick="return confirm('Are you sure you want to cancel this invoice?');">
                                                        <i class="fas fa-times"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted">
                                        <i class="fas fa-info-circle"></i> No invoices found matching your criteria.
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="4" class="text-right">Total:</th>
                                <th class="text-success">@Model.Invoices.Sum(i => i.TotalAmount).ToString("C")</th>
                                <th class="text-info">@Model.Invoices.Sum(i => i.PaidAmount).ToString("C")</th>
                                <th class="text-warning">@Model.Invoices.Sum(i => i.OutstandingBalance).ToString("C")</th>
                                <th colspan="2"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info">
                            Showing @((Model.CurrentPage - 1) * 20 + 1) to @(Math.Min(Model.CurrentPage * 20, Model.TotalCount)) of @Model.TotalCount entries
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers">
                            <ul class="pagination">
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="paginate_button page-item">
                                        <a asp-action="Index" 
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-status="@Model.SelectedStatus"
                                           asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                           asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                           asp-route-page="@(Model.CurrentPage - 1)"
                                           class="page-link">Previous</a>
                                    </li>
                                }
                                
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="paginate_button page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a asp-action="Index" 
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-status="@Model.SelectedStatus"
                                           asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                           asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                           asp-route-page="@i"
                                           class="page-link">@i</a>
                                    </li>
                                }
                                
                                @if (Model.HasNextPage)
                                {
                                    <li class="paginate_button page-item">
                                        <a asp-action="Index" 
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-status="@Model.SelectedStatus"
                                           asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                           asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                           asp-route-page="@(Model.CurrentPage + 1)"
                                           class="page-link">Next</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Highlight overdue invoices
            $('.invoice-overdue').each(function() {
                $(this).closest('tr').addClass('table-danger');
            });
        });
    </script>
}