@model QuarryManagementSystem.ViewModels.PaymentReceiptViewModel
@{
    ViewData["Title"] = "Payment Receipt";
    var invoice = Model.Invoice;
    var payment = Model.PaymentEntry;
    var company = Model.CompanyDetails;
    var paymentAmount = payment.TotalDebit > 0 ? payment.TotalDebit : payment.TotalCredit;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Payment Receipt</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Invoice")">Invoices</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Details","Invoice", new { id = invoice.Id })">@invoice.InvoiceNumber</a></li>
                    <li class="breadcrumb-item active">Receipt</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card card-outline card-success" id="receiptCard">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title">Official Receipt</h3>
                        <span class="badge badge-success">PAID</span>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h4 class="mb-1">@company.CompanyName</h4>
                                <p class="mb-0">
                                    @company.Address<br />
                                    @company.City, @company.State<br />
                                    Phone: @company.Phone<br />
                                    Email: @company.Email
                                </p>
                            </div>
                            <div class="col-md-6 text-right">
                                <h5>Receipt #&nbsp;@payment.EntryNumber</h5>
                                <p class="mb-0">
                                    Receipt Date: @payment.EntryDate.ToString("dd/MM/yyyy")<br />
                                    Invoice #: @invoice.InvoiceNumber<br />
                                    Invoice Date: @invoice.InvoiceDate.ToString("dd/MM/yyyy")<br />
                                    Payment Reference: @payment.Reference
                                </p>
                            </div>
                        </div>

                        <hr />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h5>Received From</h5>
                                <p class="mb-1">
                                    <strong>@invoice.Customer?.Name</strong><br />
                                    @invoice.Customer?.BillingAddress
                                </p>
                            </div>
                            <div class="col-md-6 text-right">
                                <h5>Amount Received</h5>
                                <h3 class="text-success mb-1">₦@paymentAmount.ToString("N2")</h3>
                                <p class="mb-0">
                                    Invoice Total: ₦@invoice.TotalAmount.ToString("N2")<br />
                                    Total Paid (incl. this): ₦@invoice.PaidAmount.ToString("N2")<br />
                                    Outstanding Balance: ₦@invoice.OutstandingBalance.ToString("N2")
                                </p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <h5>Payment Details</h5>
                                <p class="mb-0">
                                    @payment.Description
                                </p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <h5>Journal Entry (Posted to Accounts)</h5>
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered mb-0">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Account Code</th>
                                                <th>Account Name</th>
                                                <th class="text-right">Debit (₦)</th>
                                                <th class="text-right">Credit (₦)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var line in payment.JournalEntryLines)
                                            {
                                                <tr>
                                                    <td>@line.Account.AccountCode</td>
                                                    <td>@line.Account.AccountName</td>
                                                    <td class="text-right">@(line.DebitAmount > 0 ? line.DebitAmount.ToString("N2") : string.Empty)</td>
                                                    <td class="text-right">@(line.CreditAmount > 0 ? line.CreditAmount.ToString("N2") : string.Empty)</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr class="font-weight-bold">
                                                <td colspan="2" class="text-right">Totals</td>
                                                <td class="text-right">@payment.TotalDebit.ToString("N2")</td>
                                                <td class="text-right">@payment.TotalCredit.ToString("N2")</td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <small class="form-text text-muted">
                                    Full journal entry details are available under Accounting > Journal Entries (Entry #: @payment.EntryNumber).
                                </small>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <p class="mb-0">Prepared By: @User.Identity?.Name</p>
                            </div>
                            <div class="col-md-6 text-right">
                                <p class="mb-0">For and on behalf of @company.CompanyName</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button type="button" class="btn btn-secondary mr-2" onclick="history.back()">
                            <i class="fas fa-arrow-left"></i> Back
                        </button>
                        <button type="button" class="btn btn-primary" onclick="printReceipt()">
                            <i class="fas fa-print"></i> Print Receipt
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function printReceipt() {
            var printContents = document.getElementById('receiptCard').innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
            location.reload();
        }
    </script>
}