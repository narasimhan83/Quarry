@model QuarryManagementSystem.ViewModels.SystemSettingsViewModel
@{
    ViewData["Title"] = "System Settings";
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">System Settings</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item active">Settings</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-action="Index" asp-controller="Settings" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card card-outline card-primary">
                <div class="card-header"><h3 class="card-title mb-0">Company</h3></div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CompanyName"></label>
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="City"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="State"></label>
                                <input asp-for="State" class="form-control" />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SupportEmail"></label>
                                <input asp-for="SupportEmail" class="form-control" />
                                <span asp-validation-for="SupportEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-outline card-info">
                <div class="card-header"><h3 class="card-title mb-0">Regional</h3></div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="CurrencySymbol"></label>
                                <input asp-for="CurrencySymbol" class="form-control" />
                                <span asp-validation-for="CurrencySymbol" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DateFormat"></label>
                                <input asp-for="DateFormat" class="form-control" />
                                <span asp-validation-for="DateFormat" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TimeZone"></label>
                                <input asp-for="TimeZone" class="form-control" />
                                <span asp-validation-for="TimeZone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-outline card-warning">
                <div class="card-header"><h3 class="card-title mb-0">Finance</h3></div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DefaultVatRate"></label>
                                <input asp-for="DefaultVatRate" class="form-control" />
                                <span asp-validation-for="DefaultVatRate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="custom-control custom-switch mt-4">
                                    <input asp-for="EnableLatePaymentPenalty" type="checkbox" class="custom-control-input" id="penaltySwitch">
                                    <label class="custom-control-label" for="penaltySwitch">Enable Late Payment Penalty</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="LatePaymentPenaltyRate"></label>
                                <input asp-for="LatePaymentPenaltyRate" class="form-control" />
                                <span asp-validation-for="LatePaymentPenaltyRate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-outline card-success">
                <div class="card-header"><h3 class="card-title mb-0">UI / UX</h3></div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Theme"></label>
                                <select asp-for="Theme" class="form-control">
                                    <option value="default">Default</option>
                                    <option value="dark">Dark</option>
                                    <option value="light">Light</option>
                                </select>
                                <span asp-validation-for="Theme" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DashboardAutoRefreshSeconds"></label>
                                <input asp-for="DashboardAutoRefreshSeconds" class="form-control" />
                                <span asp-validation-for="DashboardAutoRefreshSeconds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mt-4">
                                <div class="custom-control custom-switch">
                                    <input asp-for="ShowDemoBadges" type="checkbox" class="custom-control-input" id="demoSwitch">
                                    <label class="custom-control-label" for="demoSwitch">Show Demo Badges</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-outline card-secondary">
                <div class="card-header"><h3 class="card-title mb-0">Email (SMTP)</h3></div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="SmtpHost"></label>
                                <input asp-for="SmtpHost" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SmtpPort"></label>
                                <input asp-for="SmtpPort" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="SmtpUser"></label>
                                <input asp-for="SmtpUser" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="SmtpPassword"></label>
                                <input asp-for="SmtpPassword" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            <input asp-for="SmtpEnableSsl" type="checkbox" class="custom-control-input" id="sslSwitch">
                            <label class="custom-control-label" for="sslSwitch">Enable SSL</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-outline card-light">
                <div class="card-header"><h3 class="card-title mb-0">Notes</h3></div>
                <div class="card-body">
                    <p class="text-muted mb-2">Persistence: @Model.IsPersistenceAvailable</p>
                    <textarea asp-for="Notes" rows="3" class="form-control"></textarea>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Settings</button>
                <a class="btn btn-secondary" href="@Url.Action("Index","Dashboard")">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}