@model QuarryManagementSystem.ViewModels.QuotationListViewModel
@{
    ViewData["Title"] = "Quotation Management";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quotation Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item active">Quotations</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-check"></i> Success!</h5>
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Error!</h5>
            @TempData["Error"]
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-ban"></i> Error!</h5>
            @Model.ErrorMessage
        </div>
    }

    <!-- Summary Cards -->
    <div class="row">
        <div class="col-lg-2 col-6">
            <div class="small-box bg-secondary">
                <div class="inner">
                    <h3>@Model.DraftCount</h3>
                    <p>Draft</p>
                </div>
                <div class="icon"><i class="fas fa-pencil-alt"></i></div>
                <a href="@Url.Action("Index","Quotation", new { status = "Draft" })" class="small-box-footer">View <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-2 col-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@Model.SentCount</h3>
                    <p>Sent</p>
                </div>
                <div class="icon"><i class="fas fa-paper-plane"></i></div>
                <a href="@Url.Action("Index","Quotation", new { status = "Sent" })" class="small-box-footer">View <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-2 col-6">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.AcceptedCount</h3>
                    <p>Accepted</p>
                </div>
                <div class="icon"><i class="fas fa-check"></i></div>
                <a href="@Url.Action("Index","Quotation", new { status = "Accepted" })" class="small-box-footer">View <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-2 col-6">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@Model.RejectedCount</h3>
                    <p>Rejected</p>
                </div>
                <div class="icon"><i class="fas fa-times"></i></div>
                <a href="@Url.Action("Index","Quotation", new { status = "Rejected" })" class="small-box-footer">View <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-2 col-6">
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@Model.ExpiredCount</h3>
                    <p>Expired</p>
                </div>
                <div class="icon"><i class="fas fa-hourglass-end"></i></div>
                <a href="@Url.Action("Index","Quotation", new { status = "Expired" })" class="small-box-footer">View <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-2 col-6">
            <div class="small-box bg-dark">
                <div class="inner">
                    <h3>@Model.CancelledCount</h3>
                    <p>Cancelled</p>
                </div>
                <div class="icon"><i class="fas fa-ban"></i></div>
                <a href="@Url.Action("Index","Quotation", new { status = "Cancelled" })" class="small-box-footer">View <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>

    <!-- Search and Filter Card -->
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Search & Filter Quotations</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index" class="form-horizontal">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="SearchTerm" class="control-label"></label>
                            <input asp-for="SearchTerm" class="form-control" placeholder="Search by quotation # or customer" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="SelectedStatus" class="control-label"></label>
                            <select asp-for="SelectedStatus" asp-items="Model.Statuses" class="form-control">
                                <option value="">-- All Statuses --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Date From</label>
                            <input name="dateFrom" type="date" value="@(Model.DateFrom?.ToString("yyyy-MM-dd"))" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Date To</label>
                            <input name="dateTo" type="date" value="@(Model.DateTo?.ToString("yyyy-MM-dd"))" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <div class="input-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <a asp-action="Index" class="btn btn-secondary ml-2">
                                    <i class="fas fa-refresh"></i> Reset
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Quotation List Card -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Quotation List</h3>
            <div class="card-tools">
                <a asp-action="Create" class="btn btn-success btn-sm">
                    <i class="fas fa-plus"></i> Create New Quotation
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Quotation #</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Expiry</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Quotations.Any())
                        {
                            @foreach (var q in Model.Quotations)
                            {
                                <tr class="@(q.IsExpired() ? "table-danger" : "")">
                                    <td><strong>@q.QuotationNumber</strong></td>
                                    <td>@q.QuotationDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (q.Customer != null)
                                        {
                                            <span>@q.Customer.Name</span>
                                            <br /><small class="text-muted">@q.Customer.ContactPerson</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Unknown Customer</span>
                                        }
                                    </td>
                                    <td>
                                        @q.ExpiryDate?.ToString("dd/MM/yyyy")
                                        @if (q.IsExpired())
                                        {
                                            <br /><span class="badge badge-danger">Expired</span>
                                        }
                                    </td>
                                    <td class="text-success">@q.TotalAmount.ToString("C")</td>
                                    <td>
                                        @{
                                            var statusClass = q.Status switch
                                            {
                                                "Accepted" => "badge-success",
                                                "Sent" => "badge-info",
                                                "Rejected" => "badge-warning",
                                                "Cancelled" => "badge-secondary",
                                                "Expired" => "badge-danger",
                                                _ => "badge-dark"
                                            };
                                        }
                                        <span class="badge @statusClass">@q.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@q.Id" class="btn btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Print" asp-route-id="@q.Id" class="btn btn-secondary" title="Print" target="_blank">
                                                <i class="fas fa-print"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this quotation?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="fas fa-info-circle"></i> No quotations found matching your criteria.
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="4" class="text-right">Total:</th>
                            <th class="text-success">@Model.Quotations.Sum(i => i.TotalAmount).ToString("C")</th>
                            <th colspan="2"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-sm-5">
                    <div class="dataTables_info">
                        Showing @((Model.CurrentPage - 1) * 20 + 1) to @(Math.Min(Model.CurrentPage * 20, Model.TotalCount)) of @Model.TotalCount entries
                    </div>
                </div>
                <div class="col-sm-7">
                    <div class="dataTables_paginate paging_simple_numbers">
                        <ul class="pagination">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="paginate_button page-item">
                                    <a asp-action="Index"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-status="@Model.SelectedStatus"
                                       asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                       asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                       asp-route-page="@(Model.CurrentPage - 1)"
                                       class="page-link">Previous</a>
                                </li>
                            }
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="paginate_button page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a asp-action="Index"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-status="@Model.SelectedStatus"
                                       asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                       asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                       asp-route-page="@i"
                                       class="page-link">@i</a>
                                </li>
                            }
                            @if (Model.HasNextPage)
                            {
                                <li class="paginate_button page-item">
                                    <a asp-action="Index"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-status="@Model.SelectedStatus"
                                       asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                       asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                       asp-route-page="@(Model.CurrentPage + 1)"
                                       class="page-link">Next</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
</section>

@section Scripts {
    <script>
        $(function () {
            setTimeout(function () { $('.alert').fadeOut('slow'); }, 5000);
        });
    </script>
}