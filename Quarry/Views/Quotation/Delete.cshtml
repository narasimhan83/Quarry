@model QuarryManagementSystem.Models.Domain.Quotation
@{
    ViewData["Title"] = "Delete Quotation";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Delete Quotation</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Quotation")">Quotations</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle mr-1"></i>
            This action will permanently delete the quotation and all its items. This cannot be undone.
        </div>

        <div class="card card-outline card-danger">
            <div class="card-header">
                <h3 class="card-title">Quotation Summary</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Quotation Number</dt>
                    <dd class="col-sm-9">@Model.QuotationNumber</dd>

                    <dt class="col-sm-3">Customer</dt>
                    <dd class="col-sm-9">@Model.Customer?.Name</dd>

                    <dt class="col-sm-3">Quotation Date</dt>
                    <dd class="col-sm-9">@Model.QuotationDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Expiry Date</dt>
                    <dd class="col-sm-9">@Model.ExpiryDate?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Model.Status</dd>

                    <dt class="col-sm-3">Subtotal</dt>
                    <dd class="col-sm-9">₦@Model.SubTotal.ToString("N2")</dd>

                    <dt class="col-sm-3">VAT</dt>
                    <dd class="col-sm-9">₦@Model.VatAmount.ToString("N2")</dd>

                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9 font-weight-bold">₦@Model.TotalAmount.ToString("N2")</dd>

                    <dt class="col-sm-3">Notes</dt>
                    <dd class="col-sm-9">@Model.Notes</dd>
                </dl>
            </div>
            <div class="card-footer d-flex">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary mr-2">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to permanently delete this quotation?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>