@model QuarryManagementSystem.ViewModels.EmployeeDetailsViewModel
@{
    ViewData["Title"] = "Employee Details";
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Employee Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Employee")">Employees</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-info"><i class="fas fa-id-badge"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Employee Code</span>
                        <span class="info-box-number">@Model.Employee.EmployeeCode</span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-success"><i class="fas fa-user-check"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Status</span>
                        <span class="info-box-number">@Model.Employee.Status</span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-warning"><i class="fas fa-birthday-cake"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Age</span>
                        <span class="info-box-number">@((Model.Age ?? 0).ToString("N0"))</span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-primary"><i class="fas fa-briefcase"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Years of Service</span>
                        <span class="info-box-number">@((Model.YearsOfService ?? 0).ToString("N0"))</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-outline card-primary">
            <div class="card-header d-flex justify-content-between">
                <h3 class="card-title mb-0">@Model.Employee.FullName</h3>
                <div>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit","Employee", new { id = Model.Employee.Id })">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-sm btn-info" href="@Url.Action("PayrollDetails","Employee", new { id = Model.Employee.Id })">
                        <i class="fas fa-file-invoice-dollar"></i> Payroll Details
                    </a>
                    <a class="btn btn-sm btn-secondary" href="@Url.Action("Index","Employee")">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tbody>
                                <tr><th>Department</th><td>@Model.Employee.Department</td></tr>
                                <tr><th>Designation</th><td>@Model.Employee.Designation</td></tr>
                                <tr><th>Phone</th><td>@Model.Employee.Phone</td></tr>
                                <tr><th>Email</th><td>@Model.Employee.Email</td></tr>
                                <tr><th>Date of Birth</th><td>@Model.Employee.DateOfBirth?.ToString("yyyy-MM-dd")</td></tr>
                                <tr><th>Date of Joining</th><td>@Model.Employee.DateOfJoining?.ToString("yyyy-MM-dd")</td></tr>
                                <tr><th>Quarry</th><td>@Model.Employee.Quarry?.Name</td></tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tbody>
                                <tr><th>Basic Salary</th><td>@(Model.Employee.BasicSalary ?? 0).ToString("N2")</td></tr>
                                <tr><th>Housing Allowance</th><td>@(Model.Employee.HousingAllowance ?? 0).ToString("N2")</td></tr>
                                <tr><th>Transport Allowance</th><td>@(Model.Employee.TransportAllowance ?? 0).ToString("N2")</td></tr>
                                <tr><th>Other Allowances</th><td>@(Model.Employee.OtherAllowances ?? 0).ToString("N2")</td></tr>
                                <tr><th>Gross Salary</th><td>@Model.Employee.GrossSalary.ToString("N2")</td></tr>
                                <tr><th>Pension PIN</th><td>@Model.Employee.PensionPIN</td></tr>
                                <tr><th>NHIS Number</th><td>@Model.Employee.NHISNumber</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="info-box">
                            <span class="info-box-icon bg-info"><i class="fas fa-percentage"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Monthly Pension</span>
                                <span class="info-box-number">@Model.MonthlyPensionContribution.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="info-box">
                            <span class="info-box-icon bg-success"><i class="fas fa-notes-medical"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Monthly NHIS</span>
                                <span class="info-box-number">@Model.MonthlyNHISContribution.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="info-box">
                            <span class="info-box-icon bg-warning"><i class="fas fa-file-invoice-dollar"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Total Payroll Runs</span>
                                <span class="info-box-number">@Model.TotalPayrollRuns</span>
                            </div>
                        </div>
                    </div>
                </div>

                <h5 class="mt-4">Recent Payslips</h5>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Payment Date</th>
                                <th class="text-right">Gross</th>
                                <th class="text-right">PAYE</th>
                                <th class="text-right">Pension (Emp.)</th>
                                <th class="text-right">NHIS</th>
                                <th class="text-right">Net</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.RecentSalaries.Any())
                        {
                            foreach (var s in Model.RecentSalaries)
                            {
                                <tr>
                                    <td>@s.PaymentDate.ToString("yyyy-MM-dd")</td>
                                    <td class="text-right">@s.GrossPay.ToString("N2")</td>
                                    <td class="text-right">@s.PAYE.ToString("N2")</td>
                                    <td class="text-right">@s.PensionEmployee.ToString("N2")</td>
                                    <td class="text-right">@s.NHIS.ToString("N2")</td>
                                    <td class="text-right">@s.NetPay.ToString("N2")</td>
                                    <td>@s.PaymentStatus</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted p-4">No payslips available.</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>