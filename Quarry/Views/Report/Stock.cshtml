@model QuarryManagementSystem.ViewModels.StockReportViewModel
@{
    ViewData["Title"] = "Stock Reports";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Stock Reports</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Report")">Reports</a></li>
                    <li class="breadcrumb-item active">Stock</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <div class="card card-outline card-success">
            <div class="card-header">
                <h3 class="card-title">Options</h3>
            </div>
            <div class="card-body">
                <form asp-action="Stock" asp-controller="Report" method="get" class="form-inline">
                    <div class="form-group mr-2">
                        <label class="mr-2">Type</label>
                        <select asp-for="ReportType" class="form-control">
                            <option value="summary">Summary</option>
                            <option value="movement">Movement</option>
                            <option value="valuation">Valuation</option>
                            <option value="reorder">Reorder</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">Run</button>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Model.ReportTitle</h3>
            </div>
            <div class="card-body">
                @if (Model.ReportType?.ToLower() == "summary" && Model.StockSummary != null)
                {
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-success"><i class="fas fa-cubes"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Total Materials</span>
                                    <span class="info-box-number">@Model.StockSummary.TotalMaterials</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-info"><i class="fas fa-coins"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Total Stock Value</span>
                                    <span class="info-box-number">@Model.StockSummary.TotalStockValue.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-warning"><i class="fas fa-exclamation-triangle"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Low Stock</span>
                                    <span class="info-box-number">@Model.StockSummary.LowStockCount</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-danger"><i class="fas fa-times-circle"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Out of Stock</span>
                                    <span class="info-box-number">@Model.StockSummary.OutOfStockCount</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Material</th>
                                <th>Type</th>
                                <th class="text-right">Current</th>
                                <th class="text-right">Reserved</th>
                                <th class="text-right">Available</th>
                                <th class="text-right">Unit Price</th>
                                <th class="text-right">Stock Value</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var i in Model.StockSummary.StockItems)
                        {
                            <tr>
                                <td>@i.MaterialName</td>
                                <td>@i.MaterialType</td>
                                <td class="text-right">@i.CurrentStock.ToString("N2")</td>
                                <td class="text-right">@i.ReservedStock.ToString("N2")</td>
                                <td class="text-right">@i.AvailableStock.ToString("N2")</td>
                                <td class="text-right">@i.UnitPrice.ToString("N2")</td>
                                <td class="text-right">@i.StockValue.ToString("N2")</td>
                                <td>
                                    <span class="badge badge-@(i.Status == "Out of Stock" ? "danger" : i.Status == "Low Stock" ? "warning" : "success")">
                                        @i.Status
                                    </span>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else if (Model.ReportType?.ToLower() == "movement" && Model.StockMovement != null)
                {
                    <p class="text-muted">Stock movement report placeholder.</p>
                }
                else if (Model.ReportType?.ToLower() == "valuation" && Model.StockValuation != null)
                {
                    <p class="text-muted">Stock valuation report placeholder.</p>
                }
                else if (Model.ReportType?.ToLower() == "reorder" && Model.ReorderReport != null)
                {
                    <p class="text-muted">Reorder report placeholder.</p>
                }
                else
                {
                    <p class="text-muted">No stock data available for the selected options.</p>
                }
            </div>
        </div>
    </div>
</section>