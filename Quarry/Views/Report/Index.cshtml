@{
    ViewData["Title"] = "Reports";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Reports</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item active">Reports</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Report Center</h3>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Choose a report category below.</p>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <a class="btn btn-block btn-outline-primary" href="@Url.Action("Dashboard","Report")">
                                    <i class="fas fa-chart-line mr-1"></i> Report Dashboard
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a class="btn btn-block btn-outline-success" href="@Url.Action("Financial","Report")">
                                    <i class="fas fa-file-invoice-dollar mr-1"></i> Financial Reports
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a class="btn btn-block btn-outline-info" href="@Url.Action("Operational","Report")">
                                    <i class="fas fa-industry mr-1"></i> Operational Reports
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a class="btn btn-block btn-outline-warning" href="@Url.Action("Tax","Report")">
                                    <i class="fas fa-receipt mr-1"></i> Tax Reports
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a class="btn btn-block btn-outline-secondary" href="@Url.Action("Stock","Report")">
                                    <i class="fas fa-boxes mr-1"></i> Stock Reports
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a class="btn btn-block btn-outline-dark" href="@Url.Action("Payroll","Report")">
                                    <i class="fas fa-user-tie mr-1"></i> Payroll Reports
                                </a>
                            </div>
                        </div>

                        <hr />

                        <p class="mb-0 text-muted" style="font-size: 0.95rem;">
                            Tip: Use the category pages to set date ranges and export results to Excel or PDF where available.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>