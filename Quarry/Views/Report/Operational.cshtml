@model QuarryManagementSystem.ViewModels.OperationalReportViewModel
@{
    ViewData["Title"] = "Operational Reports";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Operational Reports</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Report")">Reports</a></li>
                    <li class="breadcrumb-item active">Operational</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <div class="card card-outline card-info">
            <div class="card-header">
                <h3 class="card-title">Filters</h3>
            </div>
            <div class="card-body">
                <form asp-action="Operational" asp-controller="Report" method="get" class="form-inline">
                    <div class="form-group mr-2">
                        <label class="mr-2">From</label>
                        <input type="date" name="dateFrom" value="@(Model.DateFrom == default ? "" : Model.DateFrom.ToString("yyyy-MM-dd"))" class="form-control" />
                    </div>
                    <div class="form-group mr-2">
                        <label class="mr-2">To</label>
                        <input type="date" name="dateTo" value="@(Model.DateTo == default ? "" : Model.DateTo.ToString("yyyy-MM-dd"))" class="form-control" />
                    </div>
                    <div class="form-group mr-2">
                        <label class="mr-2">Type</label>
                        <select asp-for="ReportType" class="form-control">
                            <option value="summary">Summary</option>
                            <option value="daily">Daily Operations</option>
                            <option value="customer">Customer Analysis</option>
                            <option value="material">Material Analysis</option>
                            <option value="vehicle">Vehicle Analysis</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-info">Run</button>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Model.ReportTitle</h3>
            </div>
            <div class="card-body">
                @if (Model.ReportType?.ToLower() == "summary" && Model.OperationalSummary != null)
                {
                    <div class="row">
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-primary"><i class="fas fa-list"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Transactions</span>
                                    <span class="info-box-number">@Model.OperationalSummary.TotalTransactions.ToString("N0")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-success"><i class="fas fa-weight-hanging"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Total Weight (kg)</span>
                                    <span class="info-box-number">@Model.OperationalSummary.TotalWeight.ToString("N0")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-info"><i class="fas fa-coins"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Revenue</span>
                                    <span class="info-box-number">@Model.OperationalSummary.TotalRevenue.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-warning"><i class="fas fa-equals"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Avg Transaction</span>
                                    <span class="info-box-number">@Model.OperationalSummary.AverageTransactionValue.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (Model.ReportType?.ToLower() == "daily" && Model.DailyOperations != null)
                {
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th class="text-right">Transactions</th>
                                <th class="text-right">Total Weight (kg)</th>
                                <th class="text-right">Revenue</th>
                                <th>Top Material</th>
                                <th>Top Customer</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var d in Model.DailyOperations.DailyOperations)
                        {
                            <tr>
                                <td>@d.Date.ToString("yyyy-MM-dd")</td>
                                <td class="text-right">@d.TransactionCount.ToString("N0")</td>
                                <td class="text-right">@d.TotalWeight.ToString("N0")</td>
                                <td class="text-right">@d.Revenue.ToString("C")</td>
                                <td>@d.TopMaterial</td>
                                <td>@d.TopCustomer</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else if (Model.ReportType?.ToLower() == "customer" && Model.CustomerReport != null)
                {
                    <p class="text-muted mb-2">Customer analysis placeholder.</p>
                }
                else if (Model.ReportType?.ToLower() == "material" && Model.MaterialReport != null)
                {
                    <p class="text-muted mb-2">Material analysis placeholder.</p>
                }
                else if (Model.ReportType?.ToLower() == "vehicle" && Model.VehicleReport != null)
                {
                    <p class="text-muted mb-2">Vehicle analysis placeholder.</p>
                }
                else
                {
                    <p class="text-muted">No operational data available for the selected options.</p>
                }
            </div>
        </div>
    </div>
</section>