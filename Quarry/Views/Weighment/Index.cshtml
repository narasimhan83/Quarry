@model QuarryManagementSystem.ViewModels.WeighmentListViewModel
@{
    ViewData["Title"] = "Weighment Transactions";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Weighment Transactions</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Home</a></li>
                    <li class="breadcrumb-item active">Weighments</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Success!</h5>
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Error!</h5>
                @TempData["Error"]
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Error!</h5>
                @Model.ErrorMessage
            </div>
        }

        <!-- Search and Filter Card -->
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Search & Filter Transactions</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" class="form-horizontal">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="SearchTerm" class="control-label"></label>
                                <input asp-for="SearchTerm" class="form-control" placeholder="Search by transaction #, vehicle, customer" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="SelectedStatus" class="control-label"></label>
                                <select asp-for="SelectedStatus" asp-items="Model.Statuses" class="form-control">
                                    <option value="">-- All Statuses --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label">Date From</label>
                                <input name="dateFrom" type="date" value="@(Model.DateFrom?.ToString("yyyy-MM-dd"))" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label">Date To</label>
                                <input name="dateTo" type="date" value="@(Model.DateTo?.ToString("yyyy-MM-dd"))" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label">&nbsp;</label>
                                <div class="input-group">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary ml-2">
                                        <i class="fas fa-refresh"></i> Reset
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Weighment List Card -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Weighment Transactions</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> New Weighment
                    </a>
                    <a asp-action="Operations" class="btn btn-info btn-sm ml-2">
                        <i class="fas fa-tachometer-alt"></i> Operations Dashboard
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Transaction #</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Vehicle</th>
                                <th>Material</th>
                                <th>Gross (kg)</th>
                                <th>Tare (kg)</th>
                                <th>Net (kg)</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Weighments.Any())
                            {
                                @foreach (var weighment in Model.Weighments)
                                {
                                    <tr>
                                        <td>
                                            <strong>@weighment.TransactionNumber</strong>
                                            @if (!string.IsNullOrEmpty(weighment.ChallanNumber))
                                            {
                                                <br><small class="text-muted">Challan: @weighment.ChallanNumber</small>
                                            }
                                        </td>
                                        <td>@weighment.TransactionDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @if (weighment.Customer != null)
                                            {
                                                <span>@weighment.Customer.Name</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Walk-in Customer</span>
                                            }
                                        </td>
                                        <td>
                                            @weighment.VehicleRegNumber
                                            @if (!string.IsNullOrEmpty(weighment.DriverName))
                                            {
                                                <br><small class="text-muted">@weighment.DriverName</small>
                                            }
                                        </td>
                                        <td>
                                            @if (weighment.Material != null)
                                            {
                                                <span>@weighment.Material.Name</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Unknown</span>
                                            }
                                        </td>
                                        <td>@weighment.GrossWeight.ToString("N0")</td>
                                        <td>@(weighment.TareWeight?.ToString("N0") ?? "0")</td>
                                        <td><strong>@weighment.NetWeight.ToString("N0")</strong></td>
                                        <td>
                                            @if (weighment.TotalAmount.HasValue)
                                            {
                                                <span class="text-success">@weighment.TotalAmount.Value.ToString("C")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var statusClass = weighment.Status switch
                                                {
                                                    "Completed" => "badge-success",
                                                    "InProgress" => "badge-warning",
                                                    "Cancelled" => "badge-danger",
                                                    _ => "badge-secondary"
                                                };
                                            }
                                            <span class="badge @statusClass">@weighment.Status</span>
                                            @if (weighment.IsInvoiced)
                                            {
                                                <br><small class="text-info">Invoiced</small>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@weighment.Id" class="btn btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (weighment.Status != "Completed" && !weighment.IsInvoiced)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@weighment.Id" class="btn btn-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                @if (weighment.Status != "Completed" && !weighment.IsInvoiced)
                                                {
                                                    <form asp-action="Delete" asp-route-id="@weighment.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this weighment?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center text-muted">
                                        <i class="fas fa-info-circle"></i> No weighments found matching your criteria.
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="7" class="text-right">Total:</th>
                                <th>@Model.Weighments.Sum(w => w.NetWeight).ToString("N0") kg</th>
                                <th class="text-success">@Model.Weighments.Sum(w => w.TotalAmount ?? 0).ToString("C")</th>
                                <th colspan="2"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info">
                            Showing @((Model.CurrentPage - 1) * 20 + 1) to @(Math.Min(Model.CurrentPage * 20, Model.TotalCount)) of @Model.TotalCount entries
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers">
                            <ul class="pagination">
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="paginate_button page-item">
                                        <a asp-action="Index" 
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-status="@Model.SelectedStatus"
                                           asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                           asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                           asp-route-page="@(Model.CurrentPage - 1)"
                                           class="page-link">Previous</a>
                                    </li>
                                }
                                
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="paginate_button page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a asp-action="Index" 
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-status="@Model.SelectedStatus"
                                           asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                           asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                           asp-route-page="@i"
                                           class="page-link">@i</a>
                                    </li>
                                }
                                
                                @if (Model.HasNextPage)
                                {
                                    <li class="paginate_button page-item">
                                        <a asp-action="Index" 
                                           asp-route-searchTerm="@Model.SearchTerm"
                                           asp-route-status="@Model.SelectedStatus"
                                           asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                                           asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                                           asp-route-page="@(Model.CurrentPage + 1)"
                                           class="page-link">Next</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Real-time updates for operations dashboard
            function refreshOperationsData() {
                // This would be implemented with SignalR for real-time updates
                console.log('Refreshing operations data...');
            }

            // Refresh every 30 seconds for operations dashboard
            if (window.location.pathname.includes('/Weighment/Operations')) {
                setInterval(refreshOperationsData, 30000);
            }
        });
    </script>
}