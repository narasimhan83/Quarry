@model IEnumerable<QuarryManagementSystem.Models.Domain.ChartOfAccounts>

@{
    ViewData["Title"] = "Opening Balances";
}

@section Breadcrumb {
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item active">Opening Balances</li>
    </ol>
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Opening Balances</h3>
        <div class="card-tools">
            <span class="text-muted small">Read-only view of opening and current balances</span>
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover table-striped table-sm">
            <thead>
                <tr>
                    <th>Account Code</th>
                    <th>Account Name</th>
                    <th>Type</th>
                    <th>Sub Type</th>
                    <th class="text-right">Opening Balance (₦)</th>
                    <th class="text-right">Current Balance (₦)</th>
                </tr>
            </thead>
            <tbody>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.AccountCode</td>
            <td>@item.AccountName</td>
            <td>@item.AccountType</td>
            <td>@item.SubType</td>
            <td class="text-right">@item.OpeningBalance.ToString("N2")</td>
            <td class="text-right">@item.CurrentBalance.ToString("N2")</td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="6" class="text-center text-muted">No accounts found.</td>
    </tr>
}
            </tbody>
        </table>
    </div>
</div>